<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.howardcc.javaii.examples.FileInfoController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="filePathLabel" text="Choose a File..." />
      <Button fx:id="chooseFileButton" mnemonicParsing="false" onAction="#chooseFileButtonPressed" text="Choose File" />
      <TextArea fx:id="fileInfoTextArea" editable="false" focusTraversable="false" />
   </children>
</VBox>
